[Unit]
Description=Doorbot
After=network.target pigpio.service
Wants=pigpio.service

[Service]
User=pi
Group=pi
WorkingDirectory=/home/pi/doorbot_1.3
ExecStartPre=sudo /bin/systemctl restart pigpiod
ExecStart=/bin/bash -c 'source .venv/bin/activate; python -u -m doorbot'
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
